---
/**
 * Concerts page
 * Upcoming and previous concert listings
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import BackgroundImage from '../components/BackgroundImage.astro';
import ConcertList from '../components/ConcertList.astro';
import { SkewBanner, SectionHeader } from '../components/ui';
import concertsImage from '../assets/images/concerts-image.jpg';

// Upcoming concerts data
const upcomingConcerts = [
	{
		date: '30. mai 2026',
		venue: 'Rockefeller',
		location: 'Oslo',
		ticketLink: 'https://www.ticketmaster.no/event/los-mexicanacas-billetter/455694836'
	}
	// Add more upcoming concerts here
];

// Previous concerts data
const previousConcerts = [
	{
		date: '11. juli 2025',
		venue: 'Slottsfjell',
		location: 'Tønsberg'
	},
	{
		date: '8. februar 2025',
		venue: 'Vulkan Arena',
		location: 'Oslo'
	},
	{
		date: '4. mai 2024',
		venue: 'SALT art & music',
		location: 'Oslo'
	},
	{
		date: '17. november 2023',
		venue: 'John Dee',
		location: 'Oslo'
	},
	{
		date: '23. mars 2018',
		venue: 'Bursdagen til faren til en kompis',
		location: 'Trondheim'
	}
];
---

<BaseLayout
	title="Konserter | Los Mexicanacas"
	description="Se våre kommende konserter og hvor Los Mexicanacas har spilt tidligere. Kjøp billetter til våre forestående show!"
>
	<BackgroundImage alt="Bilde fra konserten på Vulkan arena" src={concertsImage} />
	<div class="text-mexi-white mx-auto w-full max-w-4xl px-4 py-12 md:px-12">
		<!-- Header banner -->
		<SkewBanner class="mb-8 text-center md:mb-12">
			<h1 class="mb-2 text-3xl md:text-5xl">Konserter</h1>
			<p class="text-mexi-white/90 text-sm md:text-base">Opplev Los Mexicanacas live!</p>
		</SkewBanner>

		<!-- Upcoming Concerts Section -->
		<section class="mb-12 md:mb-16">
			<SectionHeader title="Kommende Konserter" subtitle="Bli med på en uforglemmelig kveld!" />
			<ConcertList concerts={upcomingConcerts} type="upcoming" />
		</section>

		<!-- Previous Concerts Section -->
		<section>
			<SectionHeader title="Tidligere Konserter" subtitle="Se hvor vi har spredt fiesta." />
			<ConcertList concerts={previousConcerts} type="previous" />
		</section>
	</div>
</BaseLayout>
