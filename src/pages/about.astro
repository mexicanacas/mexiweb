---
/**
 * About page
 * Band history, video, and album releases
 */
import { Music, Calendar, MapPin } from '@lucide/astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import BackgroundImage from '../components/BackgroundImage.astro';
import Albums from '../components/Albums.astro';
import YouTubeEmbed from '../components/YouTubeEmbed.astro';
import { SkewBanner, Card, SectionHeader } from '../components/ui';
import albumImage from '../assets/images/background/album-image.jpg';
---

<BaseLayout
	title="Om oss | Los Mexicanacas"
	description="Bli kjent med Los Mexicanacas! Les om bandets historie og våre utgivelser. Se bilder og album fra våre eventyr."
>
	<BackgroundImage alt="Los Mexicanacas" src={albumImage} />
	<div
		class="text-mexi-white mx-auto flex max-w-4xl flex-col items-center gap-10 px-4 py-12 md:px-6"
	>
		<!-- Header banner -->
		<SkewBanner class="w-full">
			<h1 class="text-3xl md:text-5xl">Om Oss</h1>
		</SkewBanner>

		<!-- About Section -->
		<section class="w-full">
			<Card variant="black" hover={false} class="-rotate-[0.5deg] p-6 md:p-8">
				<div class="rotate-[0.5deg]">
					<p class="text-base leading-relaxed md:text-xl">
						Vi er et band som spiller akustisk latin fusion-musikk, inspirert av <strong
							class="text-mexi-green">rumba, flamenco, mariachi og reggaeton</strong
						>.
					</p>
					<p class="mt-4 text-xl font-bold md:text-2xl">
						Det blir alltid fiesta når Los Mexicanacas inntar scenen!
					</p>
				</div>
			</Card>
		</section>
		<!-- History Section -->
		<section class="w-full">
			<!-- Timeline -->
			<SectionHeader
				title="Vår Historie"
				subtitle="Fra studenter i Trondheim til Norges største fester"
				centered
			/>
			<div class="mt-4 grid gap-4 md:grid-cols-3 md:gap-6">
				<Card skew="left">
					<div class="mb-2 flex items-center gap-3">
						<Calendar class="text-mexi-red size-6" />
						<span class="text-mexi-green font-bold">2017</span>
					</div>
					<h3 class="text-lg font-bold md:text-xl">Starten</h3>
					<p class="text-mexi-white/70 text-sm md:text-base">
						Los Mexicanacas stiftes en kald, våt, varm, vindstille og vindfull kveld 2017 i
						Trondheim av en gjeng overivrige studenter som ikke fikk nok musikk av å synge i kor.
					</p>
				</Card>
				<Card variant="green" class="md:-translate-y-2">
					<div class="mb-2 flex items-center gap-3">
						<MapPin class="size-6" />
						<span class="font-bold">2021</span>
					</div>
					<h3 class="text-lg font-bold md:text-xl">Oslo-eventyr</h3>
					<p class="text-mexi-black/70 text-sm md:text-base">
						Studietilværelsen i Trondheim er over og vi flytter sørover til Oslo. I det
						koronapandemien er over har vi vår første konsert i hovedstaden – med utvidet repertoar
						og økt ambisjonsnivå!
					</p>
				</Card>
				<Card skew="right">
					<div class="mb-2 flex items-center gap-3">
						<Music class="text-mexi-red size-6" />
						<span class="text-mexi-green font-bold">I dag</span>
					</div>
					<h3 class="text-lg font-bold md:text-xl">Fiesta!</h3>
					<p class="text-mexi-white/70 text-sm md:text-base">
						Vi holder konserter og lager fest ved alle slags anledninger! Vi spiller landet rundt,
						med konserter, på konferanser, julebord, fest og i bursdagen til faren til en kompis,
						for både én og to flasker tequila.
					</p>
				</Card>
			</div>
		</section>

		<!-- Video Section -->
		<section class="w-full">
			<SectionHeader title="Se Oss I Aksjon" />
			<YouTubeEmbed videoId="l168qWtKah0" title="Los Mexicanacas Promo Video" />
		</section>

		<!-- Albums Section -->
		<Albums />
	</div>
</BaseLayout>
