---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	href: string;
	credit: string;
}

const { src, alt, href, credit } = Astro.props;
---

<div class="flex flex-col items-center">
	<a href={href} class="size-64">
		<Image src={src} alt={alt} class="shadow-md" />
	</a>
	<p class="bg-mexi-black/50">{credit}</p>
</div>
