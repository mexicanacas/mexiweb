---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
	src: ImageMetadata;
	alt: string;
	href: string;
	credit: string;
	skew?: 'left' | 'right' | 'up' | 'down';
}

const { src, alt, href, credit, skew = 'left' } = Astro.props;

const skewClasses = {
	left: '-rotate-2',
	right: 'rotate-2',
	up: '-rotate-1',
	down: 'rotate-1'
};
---

<div class="group flex flex-col items-center gap-2">
	<a
		href={href}
		class:list={[
			'border-mexi-white overflow-hidden border-4 shadow-[4px_4px_0px_0px_#d62828] transition-all duration-300 hover:scale-[1.02] hover:rotate-0 md:hover:scale-105',
			skewClasses[skew]
		]}
	>
		<Image src={src} alt={alt} width={256} class="size-56 object-cover md:size-64" />
	</a>
	<p class="text-mexi-white/50 text-sm">{credit}</p>
</div>
