---
/**
 * Section header with decorative lines and semi-transparent dark background
 * Provides good contrast over background images
 *
 * @example
 * <SectionHeader title="Hva Folk Sier" subtitle="Ekte tilbakemeldinger" />
 * <SectionHeader title="VÃ¥re Formater" centered />
 */

interface Props {
	title: string;
	subtitle?: string;
	centered?: boolean;
	class?: string;
}

const { title, subtitle, centered = false, class: className } = Astro.props;
---

<div
	class:list={[
		'bg-mexi-black/90 relative mb-4 -skew-x-1 p-4',
		centered && 'text-center',
		className
	]}
>
	<div class="skew-x-1">
		<!-- Top decorative line -->
		<div class="bg-mexi-red mb-3 h-1 w-24 md:w-32" class:list={[centered && 'mx-auto']}></div>

		<h2 class="text-2xl md:text-4xl">{title}</h2>
		{subtitle && <p class="text-mexi-white/70 mt-1 text-sm md:text-base">{subtitle}</p>}
		<slot />

		<!-- Bottom decorative line -->
		<div class="bg-mexi-green mt-3 h-1 w-20 md:w-24" class:list={[centered && 'mx-auto']}></div>
	</div>
</div>
