---
/**
 * Concert promotion component
 * Featured upcoming concert with ticket link
 */
import { SkewButton, SkewBanner, Card } from './ui';
---

<section class="relative">
	<SkewBanner skewDirection="up" class="py-4 text-center">
		<span class="text-lg tracking-widest uppercase md:text-xl">Kommende Konsert</span>
	</SkewBanner>

	<Card skew="down" shadow="red" class="p-6 text-center md:p-12">
		<h2 class="mb-2 inline-block text-4xl md:text-6xl">Rockefeller</h2>
		<p class="text-mexi-green text-xl font-bold md:text-2xl">Oslo</p>

		<p class="text-mexi-white/60 mt-6 text-sm md:text-base">Lørdag 30. mai 2026</p>

		<p class="text-mexi-white/80 mx-auto mt-4 max-w-md text-sm md:text-base">
			Opplev Nordens varmeste latino-fusion-orkester live!
		</p>

		<div class="mt-8">
			<SkewButton
				href="https://www.ticketmaster.no/event/los-mexicanacas-billetter/455694836"
				target="_blank"
				size="lg"
			>
				Kjøp billetter
			</SkewButton>
		</div>
	</Card>
</section>
