---
import { Image } from 'astro:assets';
import HamburgerMenu from './HamburgerMenu.astro';
import logo from '../assets/images/logo.png';

const navLinks = [
	{ href: '/', label: 'Hjem' },
	{ href: '/booking', label: 'Booking' },
	{ href: '/concerts', label: 'Konserter' },
	{ href: '/about', label: 'Om oss' }
];
---

<header class="bg-mexi-black text-mexi-cream fixed top-0 right-0 left-0 z-10 shadow-lg">
	<nav
		class="mx-auto flex max-w-7xl items-center justify-between px-4 py-4 md:justify-start md:gap-8"
	>
		<a href="/">
			<Image src={logo} alt="Los Mexicanacas logo" class="h-12 w-auto drop-shadow-lg" />
		</a>

		<ul class="hidden gap-6 text-lg font-semibold md:flex md:gap-8 md:text-2xl">
			{
				navLinks.map((link) => (
					<li>
						<a href={link.href} class="hover:text-mexi-green transition-colors">
							{link.label}
						</a>
					</li>
				))
			}
		</ul>

		<HamburgerMenu links={navLinks} />
	</nav>
</header>
