---
/**
 * Albums section component
 * Displays all album releases with covers and track listings
 */
import AlbumCover from './AlbumCover.astro';
import AlbumInfo from './AlbumInfo.astro';
import elPeCover from '../assets/images/el-pe-cover.jpg';
import diegoCover from '../assets/images/diego-cover.jpg';
import plataCover from '../assets/images/plata-cover.png';
import mexTapeCover from '../assets/images/mex-tape-cover.png';
import { SectionHeader } from './ui';

const albums = [
	{
		title: 'El Pé',
		year: 2021,
		tracks: ['Yo Soy El Aventurero', "Livin' la Vida Loca", '¡Aserejito!'],
		cover: elPeCover,
		alt: 'Cover for utgivelsen El Pé',
		credit: 'Grafikk av Lovinda Ødegården',
		href: 'https://open.spotify.com/album/5YksxKdjfI0cBAMkwWLLkQ?si=B3EP0nRlRkugiLFoqJmdzw',
		skew: 'left' as const
	},
	{
		title: 'Diego Licarno',
		year: 2022,
		tracks: ['Diego Licarno (Viva Mæxico)'],
		cover: diegoCover,
		alt: 'Cover for utgivelsen Diego Licarno',
		credit: 'Tegning av Gabriel Konupek With',
		href: 'https://open.spotify.com/album/5I2j5UPKxM1VBdj0c2agOM?si=0WPjoDhLS62x1cXijEoW9g',
		skew: 'right' as const
	},
	{
		title: 'Plata',
		year: 2023,
		tracks: ['Fireball (feat. Flo Ryan)', 'Yo No Sé', "Gasolina (feat. Lil' Jake)"],
		cover: plataCover,
		alt: 'Cover for utgivelsen Plata',
		credit: 'Grafikk av Ole Bøe Andreasen',
		href: 'https://open.spotify.com/album/5I2j5UPKxM1VBdj0c2agOM?si=0WPjoDhLS62x1cXijEoW9g',
		skew: 'down' as const
	},
	{
		title: 'Mex-tape',
		year: 2024,
		tracks: ['Pinne for Mexico', 'Taco Shell', 'Samba of Silence'],
		cover: mexTapeCover,
		alt: 'Cover for utgivelsen Mex-tape',
		credit: 'Grafikk av Sigmund Bjørnhaug',
		href: 'https://open.spotify.com/album/3rcCFI72gT7S7VC868Iuxm?si=QZaj5awaSzuyHZ6D8JtEbw',
		skew: 'up' as const
	}
].sort((a, b) => a.year - b.year);
---

<section class="w-full">
	<SectionHeader
		title="Våre Utgivelser"
		subtitle="Klikk på coveret for å lytte på Spotify!"
		centered
	/>
	<div class="bg-mexi-black/90 p-4 md:p-6">
		<div class="flex flex-col gap-8 md:grid md:grid-cols-2 md:items-center md:gap-6">
			{
				albums.map((album) => (
					<>
						<AlbumCover
							src={album.cover}
							alt={album.alt}
							credit={album.credit}
							href={album.href}
							skew={album.skew}
						/>
						<AlbumInfo title={album.title} year={String(album.year)} tracks={album.tracks} />
					</>
				))
			}
		</div>
	</div>
</section>
